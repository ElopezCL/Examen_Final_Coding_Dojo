@{
    Html.ViewData.TemplateInfo.HtmlFieldPrefix = "Login";
}

@using Artsgram.Models;
@model UserDTO;



<form asp-action="Login" asp-controller="Home">
    <h3>Login in</h3>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleFormControlInput1" placeholder="Nombre">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" for="exampleFormControlInput1">Password</label>
        <input asp-for="Password" type="password" class="form-control form-control-sm" id="exampleFormControlInput2"
            placeholder="Password">
        <span asp-validation-for="Password"></span>
    </div>

    <button class="btn btn-primary mt-3">Login</button>

</form>